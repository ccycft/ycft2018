  </resultMap>
  <sql id="Base_Column_List" >
    id, name, time, user, type, praise, img_name
  </sql>
  
  <!-- 客户端方法开始 -->
  <!-- 根据点赞数数量排序 -->
  <select id="selectByPraiseCount" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
      	select <include refid="Base_Column_List"></include>
      	from title order by praise desc limit 0 , #{value}
  </select>
  <!-- 根据发布时间排序 -->
  <select id="selectByTime" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
      select <include refid="Base_Column_List"></include>
      from title order by time desc 
      limit #{0} , #{1}
  </select>
  <!-- 客户端方法 结束 -->
  
  <!-- 服务端方法开始 -->
  <select id="selByCount" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select * 
		from title where type = #{0} order by time desc 
  </select>
  
  <select id="selAllTwo" resultMap="ResultMapWithBLOBs">
  		SELECT title.id,NAME,TIME,USER,img_name,TEXT 
  		FROM content,title 
  		WHERE title.id = content.tid AND TYPE = 2
  </select>
  
  <select id="selAllTwoById" resultMap="ResultMapWithBLOBs" parameterType="java.lang.Integer">
  		SELECT title.id,NAME,TIME,USER,img_name,TEXT 
  		FROM content,title 
  		WHERE title.id = content.tid AND TYPE = 2 AND title.id = #{1}
  </select>
  <!-- 服务端方法结束 -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from title
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from title
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.ycft.ycft.po.Title" >
