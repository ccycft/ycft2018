  <update id="updateByPrimaryKeySelective" parameterType="com.ycft.ycft.po.Title" >
    update title
    <set >
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="time != null" >
        time = #{time,jdbcType=VARCHAR},
      </if>
      <if test="user != null" >
